@page "{userId:int?}"
@model JournalApp.Web.Pages.Journals.EditModel
@{
    ViewData["Title"] = "Edit";
}

@section Scripts {

}


<h1>Editing Post</h1>

<form style="width: 22rem;" method="post">
    <input type="hidden" asp-for="Journal.Id" />
    <div class="form-group">
        <label asp-for="Journal.Title"></label>
        <input asp-for="Journal.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Journal.Journey"></label>
        <textarea style="height: 150px;" asp-for="Journal.Journey.ContentString" class="form-control"></textarea>
    
    </div>
</form>





